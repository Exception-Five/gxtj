<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
                PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhoulin.demo.mapper.UserModMapper">
    <resultMap id="UserModMap" type="com.zhoulin.demo.bean.UserMod">
        <id column="mod_id" property="modId"/>
        <result column="user_id" property="userId"/>
        <result column="entertainment" property="entertainment"/>
        <result column="law" property="law"/>
        <result column="politics" property="politics"/>
        <result column="business" property="business"/>
        <result column="technology" property="technology"/>
        <result column="internet" property="internet"/>
        <result column="life" property="life"/>
    </resultMap>

    <select id="getUserModByUserId" parameterType="int" resultMap="UserModMap">
        SELECT * FROM user_mod
        WHERE user_id = #{userId}
    </select>

    <update id="updateUserMod" parameterType="UserMod">
        update user_mod
        <set>
            <if test="entertainment != null">
                entertainment = #{entertainment,jdbcType=INTEGER},
            </if>
            <if test="politics != null">
                politics = #{politics,jdbcType=INTEGER},
            </if>
            <if test="law != null">
                law = #{law,jdbcType=INTEGER},
            </if>
            <if test="internet != null">
                internet = #{internet,jdbcType=INTEGER},
            </if>
            <if test="business != null">
                business = #{business,jdbcType=INTEGER},
            </if>
            <if test="technology != null">
                technology = #{technology,jdbcType=INTEGER},
            </if>
            <if test="life != null">
                life = #{life,jdbcType=INTEGER},
            </if>
        </set>
        where user_id = #{userId,jdbcType=INTEGER}
    </update>

    <insert id="addUserModForRegister" parameterType="UserMod" useGeneratedKeys="true" keyProperty="modId">
        INSERT INTO user_mod (user_id, entertainment, politics, law, business, technology, internet, life)
        VALUES (#{userId}, #{entertainment}, #{politics}, #{law}, #{business}, #{technology}, #{internet}, #{life})
    </insert>

    <delete id="deleteUserModByUserId" parameterType="int">
        DELETE from user_mod WHERE user_id = #{userId}
    </delete>

</mapper>